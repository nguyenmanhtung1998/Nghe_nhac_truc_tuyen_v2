<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/myview"
       android:layout_width="match_parent"
       android:layout_height="626dp"
       android:layout_weight="1"></androidx.viewpager.widget.ViewPager>
<com.google.android.material.tabs.TabLayout
    android:id="@+id/mytablayout"
    app:tabIndicatorColor="#DA8913"
    android:layout_width="match_parent"
    app:tabMode="fixed"
    app:tabSelectedTextColor="#1436EB"
    app:tabTextColor="#111111"
    app:tabIndicatorHeight="2dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"></com.google.android.material.tabs.TabLayout>
</LinearLayout>